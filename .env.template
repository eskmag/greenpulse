# Flask Configuration
FLASK_CONFIG=development
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
DATABASE_URL=postgresql://localhost/greenpulse_dev
DEV_DATABASE_URL=postgresql://localhost/greenpulse_dev
TEST_DATABASE_URL=postgresql://localhost/greenpulse_test

# Redis Configuration (for caching and rate limiting)
REDIS_URL=redis://localhost:6379

# External API Keys
# SSB (Statistics Norway) API Key (optional - most endpoints are public)
SSB_API_KEY=

# Elhub API Key (if available)
ELHUB_API_KEY=

# Enova API Key (if available) 
ENOVA_API_KEY=

# Email Configuration (for password reset, notifications)
MAIL_SERVER=
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379
CELERY_RESULT_BACKEND=redis://localhost:6379

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
UPLOAD_FOLDER=uploads
